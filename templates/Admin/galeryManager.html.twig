<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">
		<!--Patch error 404 favicon not found-->
		<link rel="shortcut icon" href="#">
		<script src="https://kit.fontawesome.com/abab09da6b.js" crossorigin="anonymous"></script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<!--"npm run watch"-->
	<body class="admin-background min-h-screen">
		<header class="bg-brown w-auto lg:py-2 xs:py-1">
			<nav class="stylisedPolice text-center text-white flex lg:gap-3 xs:gap-1 justify-center align-center lg:text-xl rounded-md w-auto mx-4 my-auto xs:text-xs">
				<a href="#" class="lg:w-44 xs:w-52 bg-light-brown-active hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier galerie</a>
				<a href="#" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier carte</a>
				<a href="#" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier horaire</a>
				<a href="#" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Voir réservations</a>
				<a href="#" class="lg:w-44 xs:w-52 bg-red-400 hover:bg-red-500 transition-all ease-in lg:rounded-lg xs:rounded-none">Déconnection</a>
			</nav>
		</header>
		<main class="stylisedPolice m-5 lg:mx-52 xs:mx-5 bg-connection pt-24 text-center">
			<section class="flex flex-col items-center justify-center">
				<input type="file" id="file-input" name="image" accept="image/jpeg, image/png" class="mb-2 text-white" required>
				<input type="text" placeholder="Entrez une description" class="text-black w-[19rem]" required>
			</section>
			<section class="text-white">
				<button type="submit" class="w-44 mt-5 rounded-full bg-green-700 hover:bg-green-500 text-white p-2 m-2 mb-20 transition-all ease-in font-bold">
					Valider
				</button>
			</section>
		</main>
		<footer class="m-5 mt-5 pt-24 text-center">
			<section class="">
				<div class="image-container">
				    <img src="image.jpg" class="thumbnail">
				    <div class="image-description">Description de l'image</div>
				    <button class="btn-delete">Supprimer</button>
				    <button class="btn-edit">Modifier</button>
				</div>
			</section>
		</footer>
	</body>
</html>