{% include 'Components/adminheader.html.twig' %}
<body class="admin-background min-h-screen">
    {% block body %}
        <h1>Connexion administrateur</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="email">Adresse email</label>
                <input type="text" id="email" name="_username" class="form-control" value="{{ last_email }}" required>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    {% endblock %}
</body>