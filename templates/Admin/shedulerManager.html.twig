<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">
		<!--Patch error 404 favicon not found-->
		<link rel="shortcut icon" href="#">
		<script src="https://kit.fontawesome.com/abab09da6b.js" crossorigin="anonymous"></script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<!--"npm run watch"-->
	<body class="admin-background min-h-screen"> 
		<header class="bg-brown w-auto lg:py-2 xs:py-1">
			<nav class="stylisedPolice text-center text-white flex lg:gap-3 xs:gap-1 justify-center align-center lg:text-xl rounded-md w-auto mx-4 my-auto xs:text-xs">
				<a href="{{ path('galeryManager') }}" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier galerie</a>
				<a href="{{ path('cardManager') }}" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier carte</a>
				<a href="{{ path('shedulerManager') }}" class="lg:w-44 xs:w-52 bg-light-brown-active hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Modifier horaire</a>
				<a href="{{ path('bookingManager') }}" class="lg:w-44 xs:w-52 bg-light-brown hover:bg-yellow-600 transition-all ease-in lg:rounded-lg xs:rounded-none">Voir réservations</a>
				<a href="#" class="lg:w-44 xs:w-52 bg-red-400 hover:bg-red-500 transition-all ease-in lg:rounded-lg xs:rounded-none">Déconnection</a>
			</nav>
		</header>
		<main class="m-auto mt-10 flex justify-center">
		    <section>
				<p class="lg:text-2xl xs:text-lg text-white block text-left">Lundi</p>
				<input type="text" placeholder="00:00" class="mb-2 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Mardi</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Mercredi</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Jeudi</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Vendredi</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Samedi</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<p class="lg:text-2xl xs:text-lg text-white block text-left">Dimanche</p>
				<input type="text" placeholder="00:00" class="mb-3 text-black lg:text-2xl xs:text-lg" required>

				<section class="text-center">
					<button type="submit" class="w-32 rounded-md bg-green-700 hover:bg-green-500 text-white p-2 transition-all ease-in font-bold">
						Envoyer
					</button>
				</section>
		    </section>
		</main>
	</body>
</html>
