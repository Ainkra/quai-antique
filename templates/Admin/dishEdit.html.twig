{% include 'Components/adminhead.html.twig' %}
{% include 'Components/adminheader.html.twig' %}

{% block body %}
    <p class="text-3xl text-white text-center font-bold mt-10">Modifier un plat</p>
    <main class="flex justify-center align-center">
        <section class="flex-col text-center">
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_widget(form.title, {'attr': {'class': 'card-input', 'placeholder': 'titre'}}) }}
                </div>
                {% if form.description is defined %}
                    <div class="mb-4">
                        {{ form_widget(form.description, {'attr': {'class': 'card-input', 'placeholder': 'description'}}) }}
                    </div>
                {% else %}
                    La description n'est pas présente sur cet article...<br>
                {% endif %}
                {% if form.price is defined %} 
                    <div class="flex-col mb-6">
                        {{ form_widget(form.price, {'attr': {'class': 'card-input', 'placeholder': 'prix'}}) }}
                    </div>
                {% else %}
                    Le prix n'est pas présent sur cet article...<br>
                {% endif %}
                <button href="path('admin/dishModifier')" class="w-32 rounded-md bg-red-700 hover:bg-red-500 text-white transition-all ease-in font-bold p-1 my-1">
                    <i class="fa-sharp fa-solid fa-arrow-left"></i> Revenir
                </button>
                <button type="submit" class="w-32 rounded-md bg-green-700 hover:bg-green-500 text-white transition-all ease-in font-bold p-1 my-1">
                    Enregistrer
                </button>
            {{ form_end(form) }}
        </section>
    </main>
{% endblock %}