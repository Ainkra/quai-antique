		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<!--"npm run watch"-->
	<body class="background min-h-screen">
		<header class="bg-brown w-auto">
			<img src="{{ asset('img/logo.png') }}" class="m-auto h-20 w-80 pt-3">
			<hr class="w-64 flex justify-center m-auto hr-modifier">
			<nav class="stylisedPolice text-center text-white flex gap-4 justify-center lg:text-xl rounded-md w-auto mx-4 my-auto xs:text-xs">
				<a href="{{ path('index') }}" class="nav-button">Notre carte</a>
				<a href="{{ path('booking') }}" class="nav-button">Réservations</a>
				<a href="{{ path('galery') }}" class="nav-button">Galerie</a>
				<a href="#" class="nav-button">Connexion</a>
			</nav>
		</header>
		<main class="stylisedPolice m-auto bg-connection mt-5 pt-24 pb-24 lg:mx-32 xs:mx-0 text-center">
			<section class="inline-block text-center">
				<p class="text-md text-white block text-left">Email<i class="text-red-600">*</i><p>
				<input type="email" placeholder="john@doe.com" class="mb-2 text-black" required>
				<p class="text-md text-white block text-left">Mot de passe<i class="text-red-600">*</i><p>
				<input type="password" placeholder="Mot de passe" class="mb-3 text-black" required>
			</section>
			<section class="text-white">
				<button type="submit" class="submit-button">
					Se connecter
				</button>
				<p class="text-xs mt-2">Vous ne possédez pas encore de compte?</p>
				<a href="{{ path('register') }}" class="text-sm font-bold hover:text-orange-200">Cliquez ici !</a>
			</section>
		</main>
		<footer class="stylisedPolice ">
			<section class="footer bg-brown text-white grid lg:grid-cols-3 gap-3 xs:grid-cols-1">
				<div class="text-center">
					<h1 class="lg:text-xl xs:text-lg">Horaire d'ouverture</h1>
					<p></p>
				</div>

				<div class="text-center">
					<h1 class="lg:text-xl xs:text-lg">Adresse</h1>
					<p class="lg:text-md xs:text-xs">309 Chemin de la Plaine, 74400 Chamonix</p>
				</div>

				<div class="text-center">
					<h1 class="lg:text-xl xs:text-lg text-">Contact</h1>
					<p class="lg:text-md xs:text-xs">
						<i class="fa-solid fa-phone"></i>
						+33 06 58 23 65 98
					</p>
					<p class="lg:text-md xs:text-xs">
						<i class="fa-solid fa-fax"></i>
						+33 09 56 45 25 97
					</p>
					<p class="lg:text-md xs:text-xs">
						<i class="fa-sharp fa-solid fa-envelope"></i>
						quai.antique@gmail.com
					</p>
				</div>

			</section>
		</footer>
	</body>
